<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="peacetolero_alpha_config_ros2_control" params="name initial_positions_file">
        <xacro:property name="initial_positions" value="${load_yaml(initial_positions_file)['initial_positions']}"/>

        <ros2_control name="${name}" type="system">
            <hardware>
                <!-- By default, set up controllers for simulation. This won't work on real hardware -->
                <plugin>mock_components/GenericSystem</plugin>
            </hardware>
            <joint name="peacetolero_alpha_axis_e">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['peacetolero_alpha_axis_e']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="peacetolero_alpha_axis_d">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['peacetolero_alpha_axis_d']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="peacetolero_alpha_axis_c">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['peacetolero_alpha_axis_c']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="peacetolero_alpha_axis_b">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['peacetolero_alpha_axis_b']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="peacetolero_alpha_axis_a">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['peacetolero_alpha_axis_a']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>

        </ros2_control>
    </xacro:macro>
</robot>
