<?xml version="1.0"?>
<robot name="robot_with_push_rod" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Robot Properties -->
  <xacro:property name="mesh_dir" value="package://peacetolero_description/meshes/"/>

  <!-- Links -->
  <link name="base_link">
    <visual>
      <origin xyz="0.0 0 -0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${mesh_dir}base_link.dae"/>
      </geometry>
    </visual>
    <collision>
       <origin xyz="0.0 0 -0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${mesh_dir}base_link.dae"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <link name="link1">
    <visual>
      <origin xyz="0.0 0 -0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${mesh_dir}link1.dae"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0.0 0 -0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${mesh_dir}link1.dae"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.05"/>
    </inertial>
  </link>

  <link name="push_rod">
    <visual>
      <origin xyz="0.0 -0.05 -0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${mesh_dir}push_rod.dae"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0.0 -.05 -0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${mesh_dir}push_rod.dae"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.03" ixy="0.0" ixz="0.0" iyy="0.03" iyz="0.0" izz="0.03"/>
    </inertial>
  </link>

  <!-- Joints -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0.0 0.0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10.0" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

  <joint name="push_rod_joint" type="prismatic">
    <parent link="link1"/>
    <child link="push_rod"/>
    <origin xyz="0 0.0 0.0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit effort="10.0" velocity="0.5" lower="0.0" upper="0.2"/>
  </joint>

</robot>
